<Page x:Class="_301._3_Development.users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development"
        mc:Ignorable="d" d:DesignWidth="500"
  Background="White"
  Title="users" Height="652">

    <Grid Margin="15,15,15,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" BorderThickness="0,0,0,2" Padding="10" Grid.Row="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="72,1,72,0">
                <Image Source="/Assets/AucklandHospital.jpg" Width="60" Height="60"/>
                <TextBlock Text="Auckland Hospital"
                       FontSize="20" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="10,15,10,58">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Users’ Logs"
                       FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center"/>

                <Border Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Height="30"
                    VerticalAlignment="Center"
                    Background="White"
                    Padding="5,0,5,0"
                    Margin="90,0,20,0">
                    <DockPanel>
                        <Image Source="/Assets/search.png" Margin="0,0,5,0" Height="25" Width="25"/>
                        <TextBox x:Name="SearchBox"
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             FontSize="13"
                             Foreground="Gray"
                             Text="Search by name"
                             TextChanged="SearchBox_TextChanged"/>
                    </DockPanel>
                </Border>
            </Grid>

            <ScrollViewer Height="400" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="UserList" Height="371">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="10" Padding="10" Background="#E6F7FF">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Username, StringFormat='Username: {0}'}" FontSize="13"/>
                                    <TextBlock Text="{Binding Password, StringFormat='Password: {0}'}" FontSize="13"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
        <Button x:Name="NextButton"
            Grid.Row="1"
            Content="Next"
            FontWeight="Bold"
            FontSize="22"
            Width="120"
            HorizontalAlignment="Right"
            Margin="0,500,0,0"
            Background="#E6F7FF"
            BorderBrush="Black"
            BorderThickness="1"
            Click="NextButton_Click"/>
    </Grid>
</Page>
