<Page x:Class="_301._3_Development.mainscreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development"
        mc:Ignorable="d" 
  d:DesignHeight="300" d:DesignWidth="470"
  Title="mainscreen" 
  Background="AliceBlue">

    <Grid Margin="20" Width="420" Height="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" BorderThickness="0,0,0,2" Padding="10" Grid.Row="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="88,0,89,0">
                <Image Source="/Assets/AucklandHospital.jpg" Width="60" Height="60" VerticalAlignment="Center"/>
                <TextBlock Text="Auckland Hospital" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Width="159"/>
            </StackPanel>
        </Border>

        <TextBlock Text="Welcome to our digital registration form!" FontSize="14" Margin="10,10,146,134" Grid.Row="1"/>
        <Button Content="Register New Patient" BorderBrush="Black" BorderThickness="1" 
    Margin="25,54,266,85" Grid.Row="1" Background="#E6F7FF"
    Click="BtnRegister_Click"/>

        <Button Content="View Data" BorderBrush="Black" BorderThickness="1" 
    Margin="146,116,145,23" Grid.Row="1" Background="#E6F7FF"
    Click="BtnViewData_Click"/>

        <Button Content="Export Data to Image" BorderBrush="Black" BorderThickness="1" 
    Margin="266,54,25,85" Grid.Row="1" Background="#E6F7FF"
    Click="BtnExport_Click"/>
    </Grid>
</Page>
