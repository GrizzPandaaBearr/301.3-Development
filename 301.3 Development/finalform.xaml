<Page x:Class="_301._3_Development.finalform"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="finalform"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Ellipse Width="40" Height="40" Fill="LightGray" VerticalAlignment="Center"/>
                <TextBlock Text="Timberland Medical Centre" 
                           FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="0,5,0,5" CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="PATIENT :" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,5"/>
                        <TextBlock Text="Patient's name" />
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Contact No"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Passport No"/>
                        <TextBox Margin="0,0,0,5"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Appointment Date"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Place of birth"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Date of birth"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Sex"/>
                        <TextBox Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="0,5,0,5" CornerRadius="3">
                <Grid Background="#E6F7FF">
                    <StackPanel>
                        <TextBlock Text="PATIENT’S EMERGENCY CONTACT:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,5"/>
                        <TextBlock Text="Name"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Contact No"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Relationship"/>
                        <TextBox Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="3" BorderBrush="Black" BorderThickness="1" Margin="0,5,0,5" CornerRadius="3">
                <Grid Background="White">
                    <StackPanel>
                        <TextBlock Text="PICK-UP NEEDED:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <CheckBox Content="Yes" Margin="0,0,20,0"/>
                            <CheckBox Content="No"/>
                        </StackPanel>
                        <TextBlock Text="Come by"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="ETA"/>
                        <TextBox Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="4" BorderBrush="Black" BorderThickness="1" Margin="0,5,0,5" CornerRadius="3">
                <Grid Background="#E6F7FF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="INFORMATION:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,5"/>
                        <CheckBox Content="Inpatient"/>
                        <CheckBox Content="Outpatient"/>
                        <CheckBox Content="Medical Check-Up"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Doctor"/>
                        <TextBox Margin="0,0,0,5"/>
                        <TextBlock Text="Remark"/>
                        <TextBox Margin="0,0,0,5" Height="60"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</Page>
