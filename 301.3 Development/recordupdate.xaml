<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:_301._3_Development"
      xmlns:models="clr-namespace:_301._3_Development.Models"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="av" x:Class="_301._3_Development.recordupdate"
      Title="recordupdate"
      Background="White" av:DesignHeight="529">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" BorderThickness="0,0,0,2" Padding="10" Grid.Row="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="72,1,72,0">
                <Image Source="/Assets/AucklandHospital.jpg" Width="60" Height="60"/>
                <TextBlock Text="Auckland Hospital"
                           FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="10,15,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Records' Update"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="10,0,20,0"/>

                <Border Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="30"
                        VerticalAlignment="Center"
                        Background="White"
                        Padding="5,0,5,0"
                        Margin="10,0,10,0">
                    <DockPanel>
                        <Image Source="/Assets/search.png"
                               Margin="0,0,5,0"
                               Height="25" Width="25"/>
                        <TextBox x:Name="SearchBox"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 FontSize="13"
                                 Foreground="Gray"
                                 TextChanged="SearchBox_TextChanged"
                                 Text="Search by Name"/>
                    </DockPanel>
                </Border>
            </Grid>

            <ScrollViewer Height="360" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="PatientList" Height="361">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    Width="160" Height="35" Margin="5"
                                    Background="#E6F7FF"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    Click="PatientButton_Click"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>