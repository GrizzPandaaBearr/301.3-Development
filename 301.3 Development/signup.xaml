<Page x:Class="_301._3_Development.signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development"
        mc:Ignorable="d" 
  d:DesignHeight="300.833" d:DesignWidth="350"
  Title="signup"
  Background="LightCyan">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Sign Up" 
               FontSize="24" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <TextBlock Text="Username" FontSize="14" Margin="0,0,0,5"/>
            <TextBox Name="txtUsername" Height="25" Margin="0,0,0,15"/>

            <TextBlock Text="Password" FontSize="14" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <PasswordBox Name="txtPassword" Grid.Column="0" Height="25" Margin="0,0,5,0"/>

                <TextBox Name="txtPasswordVisible" Grid.Column="0" Height="25" 
                     Margin="0,0,5,0" Visibility="Collapsed"/>

                <Button x:Name="btnTogglePassword" Grid.Column="1" Width="25" Height="25" 
                    Background="Transparent" BorderBrush="Transparent"
                    Click="btnTogglePassword_Click">
                    <Image Source="/Assets/eye.png" Stretch="Uniform"/>
                </Button>
            </Grid>

            <Button Content="Sign Up" Width="80" Height="30" Margin="0,15,0,0"
                HorizontalAlignment="Center" Click="BtnSignup_Click" Background="Transparent" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <TextBlock Text="Already have an account? "/>
            <Button Content="Log In" Padding="5,2" FontSize="12" Click="BtnGoToLogin_Click" Background="Transparent"/>
        </StackPanel>
    </Grid>
</Page>
