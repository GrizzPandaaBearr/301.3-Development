<Page x:Class="_301._3_Development.newadmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development"
        mc:Ignorable="d" 
  d:DesignHeight="208.667" d:DesignWidth="341.166"
  Background="White"
  Title="newadmin">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add New Admin"
               FontSize="28" 
               FontWeight="Bold" 
               Foreground="Blue" 
               HorizontalAlignment="Center" 
               Margin="0,15,0,15"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid Width="299">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Username" 
                       VerticalAlignment="Center" 
                       FontSize="14"
                       Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                <TextBox x:Name="UsernameTextBox" 
                     Grid.Row="0" 
                     Height="25" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Width="218" Grid.ColumnSpan="2" Margin="80,0,0,0"/>

                <TextBlock Text="Password" 
                       VerticalAlignment="Center" 
                       FontSize="14"
                       Grid.Row="1" Grid.Column="0" Margin="0,10,10,0"/>
                <PasswordBox x:Name="PasswordBox" 
                         Grid.Row="1" 
                         Height="25" BorderBrush="Black" BorderThickness="1" Margin="80,10,72,0" Grid.ColumnSpan="2"/>
            </Grid>

            <Button Content="ADD" 
                Width="85" Height="25" 
                FontSize="16"
                Background="#E6F7FF"
                BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Page>
