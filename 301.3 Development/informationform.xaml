<Page x:Class="_301._3_Development.informationform"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development"
        mc:Ignorable="d" d:DesignWidth="300"
  Title="informationform"
  Background="White" Height="285">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registration Form" 
               FontSize="18" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Text="Information" 
               Grid.Row="1" Foreground="Blue" 
               FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">

            <CheckBox x:Name="chkInpatient" Content="Inpatient" Margin="0,5"/>
            <CheckBox x:Name="chkOutpatient" Content="Outpatient" Margin="0,5"/>
            <CheckBox x:Name="chkCheckup" Content="Medical Check-Up" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Doctor" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtDoctor" Width="157"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Remark" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtRemark" Width="158"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,145,0,0">
            <Button x:Name="btnPrevious" Content="Previous" Width="80" Height="30"
                HorizontalAlignment="Left" Click="btnPrevious_Click" Background="#E6F7FF"/>
            <Button x:Name="btnNext" Content="Next" Width="80" Height="30"
                HorizontalAlignment="Right" Margin="100,0,0,0" Click="btnNext_Click" Background="#E6F7FF"/>
        </StackPanel>
    </Grid>
</Page>
