<Page x:Class="_301._3_Development.Pages.PatientPages.PatientProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development.Pages.PatientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientProfilePage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Patient Profile" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBlock x:Name="NameText" Margin="0 0 0 10"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBlock x:Name="EmailText" Margin="0 0 0 10"/>

            <TextBlock Text="Birth Date:" FontWeight="Bold"/>
            <TextBlock x:Name="BirthDateText" Margin="0 0 0 10"/>

            <TextBlock Text="Assigned Doctor:" FontWeight="Bold"/>
            <TextBlock x:Name="DoctorText" Margin="0 0 0 10"/>
        </StackPanel>
    </Grid>
</Page>
