<Page x:Class="_301._3_Development.Pages.PatientPages.PatientAppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development.Pages.PatientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientAppointmentsPage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="PatientNameText"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <ListView x:Name="AppointmentsListView" Width="400" Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Appointment_Date}" />
                        <GridViewColumn Header="Doctor" DisplayMemberBinding="{Binding DoctorName}" />
                        <GridViewColumn Header="Specialization" DisplayMemberBinding="{Binding Specialization}" />
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" />
                        <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Cancel Appointment" Click="Cancel_Click" Width="150" />
        </StackPanel>
    </Grid>
</Page>
