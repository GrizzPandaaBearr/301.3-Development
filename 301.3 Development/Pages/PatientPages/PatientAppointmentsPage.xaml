<Page x:Class="_301._3_Development.Pages.PatientPages.PatientAppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development.Pages.PatientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientAppointmentsPage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="PatientNameText"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <ListBox x:Name="AppointmentList"
                     Height="300"
                     Background="White"
                     BorderBrush="#ccc"/>
        </StackPanel>
    </Grid>
</Page>
