<Page x:Class="_301._3_Development.Pages.AdminPages.RolePages.PatientInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development.Pages.AdminPages.RolePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientInfo">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Birth Place"/>
            <TextBox x:Name="TxtBirthPlace" />

            <TextBlock Text="Birth Date"/>
            <CalendarDayButton x:Name="CalBirthDay"/>

            <TextBlock Text="Gender"/>
            <ComboBox x:Name="ComboGender">
                <ComboBoxItem Tag="Male" Content="Male"/>
                <ComboBoxItem Tag="Female" Content="Female"/>
                <ComboBoxItem Tag="Other" Content="Other"/>
            </ComboBox>

            <TextBlock Text="Medical History"/>
            <TextBox x:Name="TxtMedicalHistory"/>
            
            
        </StackPanel>
    </Grid>
</Page>
