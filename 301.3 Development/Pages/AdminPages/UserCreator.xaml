<Page x:Class="_301._3_Development.Pages.AdminPages.UserCreator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserCreator">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="First Name:" Grid.Row="0"/>
        <TextBox x:Name="TxtFirstName" Grid.Row="0" Margin="120,0,0,0" Width="200"/>

        <TextBlock Text="Last Name:" Grid.Row="1" Margin="0,10,0,0"/>
        <TextBox x:Name="TxtLastName" Grid.Row="1" Margin="120,10,0,0" Width="200"/>

        <TextBlock Text="Email:" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox x:Name="TxtEmail" Grid.Row="2" Margin="120,10,0,0" Width="200"/>

        <TextBlock Text="Phone:" Grid.Row="3" Margin="0,10,0,0"/>
        <TextBox x:Name="TxtPhone" Grid.Row="3" Margin="120,10,0,0" Width="200"/>

        <TextBlock Text="Password:" Grid.Row="4" Margin="0,10,0,0"/>
        <PasswordBox x:Name="TxtPassword" Grid.Row="4" Margin="120,10,0,0" Width="200"/>

        <TextBlock Text="Role:" Grid.Row="5" Margin="0,10,0,0"/>

        <ComboBox SelectionChanged="ComboRole_SelectionChanged" x:Name="ComboRole" Grid.Row="5" Margin="120,10,0,0" Width="200">
            <ComboBoxItem Tag="Patient" Content="Patient"/>
            <ComboBoxItem Tag="Doctor" Content="Doctor"/>
            <ComboBoxItem Tag="Admin" Content="Admin"/>
        </ComboBox>
        <Frame x:Name="FrameRole" Grid.Row="6">
            
        </Frame>

            <Button Content="Register" Grid.Row="7" Margin="0,20,0,0" Width="100"
        HorizontalAlignment="Left"
        Click="BtnRegister_Click"/>
    </Grid>
</Page>
