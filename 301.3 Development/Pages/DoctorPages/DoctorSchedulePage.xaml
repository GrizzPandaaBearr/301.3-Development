<Page x:Class="_301._3_Development.Pages.DoctorPages.DoctorSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development.Pages.DoctorPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoctorSchedulePage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="Header"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <ListView x:Name="AppointmentsList" SelectionMode="Single">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Patient" DisplayMemberBinding="{Binding PatientName}" />
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Appointment_Date}" />
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <ComboBox x:Name="StatusCombo" Width="150" Margin="0,10,0,0">
                <ComboBoxItem Content="Scheduled" />
                <ComboBoxItem Content="Completed" />
                <ComboBoxItem Content="Canceled" />
            </ComboBox>

            <Button Content="Update Status" Width="150" Margin="0,10,0,0"
        Click="UpdateStatus_Click" />
        </StackPanel>
    </Grid>
</Page>
