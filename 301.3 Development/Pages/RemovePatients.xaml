<Page x:Class="_301._3_Development.Pages.RemovePatients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_301._3_Development.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RemovePatients">

    <Grid Background="AntiqueWhite">
        <StackPanel>
            <Grid Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock Text="First Name"/>
                    <TextBox x:Name="FirstName_box"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Phone Number"/>
                    <TextBox x:Name="Phone_box"/>
                </StackPanel>
                <Button Grid.ColumnSpan="2" Grid.Row="1" x:Name="DeleteSingleUser" Content="Delete User" Click="DeleteSingleUser_Click"/>
                


            </Grid>
            <Button x:Name="DeleteAllUsersButton" Content="Delete All Patients" Click="DeleteAllUsersButton_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
