<UserControl x:Class="_301._3_Development.Controls.HamburgerMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_301._3_Development.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="225">
    <Grid x:Name="HamburgerControlGrid" Background="DarkSlateBlue" Width="225">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ActivateHamburger" Content="x" Grid.Column="3" Click="ActivateHamburger_Click"/>
        </Grid>
        

        <!-- Sample button styling, this will be generated on parent initialization-->
        <Button x:Name="sampleButton" Content="Page1" Grid.Row="2"></Button>

    </Grid>
</UserControl>
